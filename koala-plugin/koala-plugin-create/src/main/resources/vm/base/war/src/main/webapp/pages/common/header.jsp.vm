/**
 * 按回车键时，触发登录按钮
 */
function keyDown(e){
	//这样写是为了兼容FireFox和IE，因为IE的onkeydown在FF中不起作用
	var ev =window.event||e; 
 	//按回车键
  	if (ev.keyCode==13) {
   		ev.returnValue=false;
   		ev.cancel = true;
   		var sub =  document.getElementById("btnSubmit");
  		sub.click();
  	} 
}
</script>
