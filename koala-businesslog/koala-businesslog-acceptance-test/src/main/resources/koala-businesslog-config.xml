<?xml version="1.0" encoding="UTF-8"?>
<businessLogConfigs>
    <businessLogConfig>
        <!--向项目中的合同，添加一张发票-->
        <method>Invoice business.InvoiceApplication.addInvoice(String,long)</method>
        <template><![CDATA[向项目${project.name}的合同${contract.name}添加发票：${_methodReturn.sn}]]></template>
        <queries>
            <query key="contract">
                <target class="business.ContractApplication">contractApplication</target>
                <method>findContractById(long)</method>
                <args>
                    <arg>${_param1}</arg>
                </args>
            </query>
            <query key="project">
                <target class="business.Project"></target>
                <method>findByContract(business.Contract)</method>
                <args>
                    <arg>${contract}</arg>
                </args>
            </query>
        </queries>
    </businessLogConfig>
    <businessLogConfig>
        <method>String business.ContractApplication.addContract(long)</method>
        <template><![CDATA[添加合同${_methodReturn}]]></template>
    </businessLogConfig>
</businessLogConfigs>