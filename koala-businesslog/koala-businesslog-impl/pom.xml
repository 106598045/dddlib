	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>koala-businesslog-impl</artifactId>
	<version>2.1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>javax.inject</artifactId>
