<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openkoala.jbpm</groupId>
		<artifactId>koala-jbpm</artifactId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.openkoala.bpm</groupId>
	<artifactId>koala-jbpm-oss</artifactId>
	<packaging>pom</packaging>
	<name>koala-jbpm-oss</name>
	<description>Koala BPM业务流程支撑系统</description>
	
	<modules>
		<module>jbpm-oss-conf</module>
		<module>jbpm-oss-infra</module>
		<module>jbpm-oss-core</module>
		<module>jbpm-oss-application</module>
		<module>jbpm-oss-applicationImpl</module>
		<module>jbpm-oss-web</module>
	</modules>
	
	<profiles>
		<profile>
			<id>jbpmoss</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<hibernate.hbm2ddl.auto>update</hibernate.hbm2ddl.auto>
				<hibernate.show_sql>true</hibernate.show_sql>
				<hibernate.dialect>org.hibernate.dialect.H2Dialect</hibernate.dialect>
				<db.jdbcDriver>org.h2.Driver</db.jdbcDriver>
				<db.connectionURL>jdbc:h2:~/db/jbpm-oss;MVCC=true</db.connectionURL>
				<db.username>sa</db.username>
				<db.password />
				<db.Type>H2</db.Type>
				<db.groupId>com.h2database</db.groupId>
				<db.artifactId>h2</db.artifactId>
			</properties>
		</profile>
	</profiles>

</project>