<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openkoala.jbpm</groupId>
		<artifactId>koala-jbpm</artifactId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.openkoala.koala.jbpm.designer</groupId>
	<artifactId>koala-jbpm-designer</artifactId>
	<packaging>pom</packaging>
	<name>koala-jbpm-designer</name>
	<description />
	<modules>
		<module>koala-jbpm-designer-infra</module>
		<module>koala-jbpm-designer-bizmodel</module>
		<module>koala-jbpm-designer-application</module>
		<module>koala-jbpm-designer-applicationImpl</module>
		<module>koala-jbpm-designer-web</module>
	</modules>

	<profiles>
		<profile>
			<id>jbpmdesigner</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<hibernate.hbm2ddl.auto>update</hibernate.hbm2ddl.auto>
				<hibernate.show_sql>true</hibernate.show_sql>
				<hibernate.dialect>org.hibernate.dialect.H2Dialect</hibernate.dialect>
				<db.jdbcDriver>org.h2.Driver</db.jdbcDriver>
				<db.connectionURL>jdbc:h2:~/db/jbpm-desinger</db.connectionURL>
				<db.username>sa</db.username>
				<db.password />
				<db.Type>H2</db.Type>
				<db.groupId>com.h2database</db.groupId>
				<db.artifactId>h2</db.artifactId>
				<jbpm.wsdl.localtion>http://localhost:8180/ws/jbpmService</jbpm.wsdl.localtion>
				<gunvor.server.url>http://localhost:8080/drools-guvnor</gunvor.server.url>
				<gunvor.server.user>admin</gunvor.server.user>
				<gunvor.server.pwd>admin</gunvor.server.pwd>
			</properties>
		</profile>
	</profiles>
</project>
