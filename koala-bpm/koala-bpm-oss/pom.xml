<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.openkoala.bpm</groupId>
		<artifactId>koala-bpm</artifactId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>
	<groupId>org.openkoala.bpm</groupId>
	<artifactId>koala-bpm-oss</artifactId>
	<packaging>pom</packaging>
	<name>koala-jbpm-oss</name>
	<description>Koala BPM业务流程支撑系统</description>

	<modules>
		<module>koala-bpm-oss-conf</module>
		<module>koala-bpm-oss-infra</module>
		<module>koala-bpm-oss-core</module>
		<module>koala-bpm-oss-application</module>
		<module>koala-bpm-oss-applicationImpl</module>
		<module>koala-bpm-oss-web</module>
	</modules>

	<profiles>
		<profile>
			<id>jbpmoss</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<hibernate.hbm2ddl.auto>update</hibernate.hbm2ddl.auto>
				<hibernate.show_sql>true</hibernate.show_sql>
				<db.generateDdl>true</db.generateDdl>
				<hibernate.dialect>org.hibernate.dialect.H2Dialect</hibernate.dialect>
				<db.jdbcDriver>org.h2.Driver</db.jdbcDriver>
				<db.connectionURL>jdbc:h2:~/db/jbpm-oss;MVCC=true</db.connectionURL>
				<db.username>sa</db.username>
				<db.password />
				<db.Type>H2</db.Type>
				<db.groupId>com.h2database</db.groupId>
				<db.artifactId>h2</db.artifactId>
				<!--test DB Config -->
				<test.hibernate.hbm2ddl.auto>update</test.hibernate.hbm2ddl.auto>
				<test.hibernate.show_sql>true</test.hibernate.show_sql>
				<test.hibernate.dialect>org.hibernate.dialect.H2Dialect</test.hibernate.dialect>
				<test.db.jdbcDriver>org.h2.Driver</test.db.jdbcDriver>
				<test.db.connectionURL>jdbc:h2:mem:jbpm-oss;MVCC=true</test.db.connectionURL>
				<test.db.username>sa</test.db.username>
				<test.db.password />
				<test.db.Type>H2</test.db.Type>
				<test.db.generateDdl>true</test.db.generateDdl>
				<test.db.groupId>com.h2database</test.db.groupId>
				<test.db.artifactId>h2</test.db.artifactId>
			</properties>

			<dependencies>
				<dependency>
					<groupId>${test.db.groupId}</groupId>
					<artifactId>${test.db.artifactId}</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

</project>